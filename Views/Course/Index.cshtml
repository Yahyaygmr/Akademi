@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h6 class="display-6">
        Başvurular(@Model.Count())
    </h6>
    <table class="table table-hover table-stripped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Adı-Soyadı</th>
                <th>Başvuru Tarihi</th>
                <th>Kurs</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.ApplyAt</td>
                    <td>@item.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Henüz Gösterilecek Bir Başvuru Yok ! Yeni Bir Kursa Başvuru Ypmak İçin
        <a class="alert-link" asp-action="Apply">Tıklayınız.</a>

    </div>
}